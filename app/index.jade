doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title SuperCalculator
    link(rel='stylesheet', href='css/app.css')
  body
    h1#title SuperCalculator

    table#calculator
      tbody
        tr
          td#display(colspan=5) 0
        tr
          td.number.button 7
          td.number.button 8
          td.number.button 9
          td.operator.button +
          td.operator.button &Sigma;
        tr
          td.number.button 4
          td.number.button 5
          td.number.button 6
          td.operator.button -
          td.operator.button x<sup>x</sup>
        tr
          td.number.button 1
          td.number.button 2
          td.number.button 3
          td.operator.button x
          td.operator.button &#8730;
        tr
          td.number.button 0
          td.dec.button .
          td.sign.button &#xb1;
          td.operator.button &#xf7;
          td.operator.button !
        tr
          td.clear.button#clear-box(colspan=2) CLEARBOX
          td.clear.button#clear-display C
          td.button#push(colspan=2) PUSH



    script(src='js/vendor/jquery-2.1.0.js')
    script(src='js/source/main.js')
